<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="2dp"
    android:paddingBottom="6dp"
    android:layout_margin="3dp"
    android:elevation="2dp"
    android:background="@drawable/answer_border">

    <TextView
        android:id="@+id/full_qa_answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/full_qa_answer_upvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:text="5"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="@color/text_primary_color"
        android:layout_below="@+id/full_qa_answer_text"/>

    <TextView
        android:id="@+id/full_qa_answer_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_qa_answer_text"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:textSize="14sp"
        android:textColor="@color/text_secondary_color"/>

    <TextView
        android:id="@+id/full_qa_answer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_qa_answer_user"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textColor="@color/text_hint"/>

</RelativeLayout>