<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_margin="2dp"
    android:background="@drawable/question_border">

    <TextView
        android:id="@+id/home_list_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Temporary"
        android:textSize="18sp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/home_list_question_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_list_question_text"
        android:text="user1234"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"/>

    <TextView
        android:id="@+id/home_list_question_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_list_question_user"
        android:text="1/1/2011 18:30"
        android:textSize="10sp"
        android:textColor="@color/text_hint"/>

</RelativeLayout>